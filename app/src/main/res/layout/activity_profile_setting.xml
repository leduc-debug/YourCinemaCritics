   <com.thelumiereguy.neumorphicview.views.NeumorphicCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="12dp"
        app:cardRadius="50"
        app:enableHighlight="true"
        app:enableShadow="true"
        app:enable_preview="true"
        app:highlightColor="@color/button_highlight_color"
        app:highlightDx="-4dp"
        app:highlightDy="-4dp"
        app:highlightRadius="16dp"
        app:horizontalPadding="16dp"
        app:neu_backgroundColor="@color/button_background"
        app:shadowColor="@color/button_shadow_color"
        app:shadowDx="4dp"
        app:shadowDy="4dp"
        app:shadowRadius="16dp"
        app:verticalPadding="8dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="16dp"
           android:padding="8dp"
           android:layout_marginBottom="20dp"
           android:layout_marginLeft="32dp"
           android:layout_marginRight="32dp"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="24sp"
               android:textStyle="bold"
               android:textColor="@color/text_color"
               android:text="Name: " />

           <EditText
               android:id="@+id/edtName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:autofillHints=""
               android:textSize="20sp"
               android:textColor="@color/text_color"
               android:textColorHint="@color/text_color"
               android:background="@null"
               android:hint="Enter your name"/>
       </LinearLayout>

    </com.thelumiereguy.neumorphicview.views.NeumorphicCardView>

    <com.thelumiereguy.neumorphicview.views.NeumorphicCardView
        android:layout_gravity="center"
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="10dp"
        app:cardRadius="50"
        app:enableHighlight="true"
        app:enableShadow="true"
        app:enable_preview="true"
        app:highlightColor="@color/button_highlight_color"
        app:highlightDx="-4dp"
        app:highlightDy="-4dp"
        app:highlightRadius="16dp"
        app:horizontalPadding="16dp"
        app:neu_backgroundColor="@color/orange"
        app:shadowColor="@color/button_shadow_color"
        app:shadowDx="4dp"
        app:shadowDy="4dp"
        app:shadowRadius="16dp"
        app:verticalPadding="12dp">

        <TextView
            android:layout_margin="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="72dp"
            android:text="DONE"
            android:textColor="@color/text_color_alt"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.thelumiereguy.neumorphicview.views.NeumorphicCardView>
</LinearLayout>
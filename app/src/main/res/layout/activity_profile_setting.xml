<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:padding="12dp"
    tools:context=".activities.ProfileSettingActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account settings"
        android:textSize="32sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp" />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:layout_margin="32dp"
        android:padding="16dp"
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:cardElevation="12dp"
        app:cardCornerRadius="90dp">
       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/ss"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           <ImageView
               android:id="@+id/imgAvatar"
               android:background="@color/white"
               android:layout_width="match_parent"
               android:layout_height="match_parent"/>

           <TextView
               android:background="@color/transparent_white"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:padding="6dp"
               android:textColor="@color/black"
               android:text="Change"
               android:textStyle="bold"
               android:textAllCaps="true"
               android:textSize="14sp"
               app:layout_constraintBottom_toBottomOf="parent" />
       </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <com.thelumiereguy.neumorphicview.views.NeumorphicCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="6dp"
        app:cardRadius="50"
        app:enableHighlight="true"
        app:enableShadow="true"
        app:enable_preview="true"
        app:highlightColor="@color/button_highlight_color"
        app:highlightDx="-4dp"
        app:highlightDy="-4dp"
        app:highlightRadius="16dp"
        app:horizontalPadding="16dp"
        app:neu_backgroundColor="@color/button_background"
        app:shadowColor="@color/button_shadow_color"
        app:shadowDx="4dp"
        app:shadowDy="4dp"
        app:shadowRadius="16dp"
        app:verticalPadding="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvGmailLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/text_color"
                android:text="Email: " />

            <TextView
                android:id="@+id/txtProfileEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/text_color"
                android:text="@string/thuan_gmail_com" />
        </LinearLayout>
    </com.thelumiereguy.neumorphicview.views.NeumorphicCardView>

   <com.thelumiereguy.neumorphicview.views.NeumorphicCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:cardRadius="50"
        app:enableHighlight="true"
        app:enableShadow="true"
        app:enable_preview="true"
        app:highlightColor="@color/button_highlight_color"
        app:highlightDx="-4dp"
        app:highlightDy="-4dp"
        app:highlightRadius="16dp"
        app:horizontalPadding="16dp"
        app:neu_backgroundColor="@color/button_background"
        app:shadowColor="@color/button_shadow_color"
        app:shadowDx="4dp"
        app:shadowDy="4dp"
        app:shadowRadius="16dp"
        app:verticalPadding="4dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="16dp"
           android:padding="8dp"
           android:layout_marginBottom="20dp"
           android:layout_marginLeft="32dp"
           android:layout_marginRight="32dp"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="20sp"
               android:layout_gravity="center"
               android:textStyle="bold"
               android:textColor="@color/text_color"
               android:text="Name: " />

           <EditText
               android:id="@+id/edtName"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:autofillHints=""
               android:textSize="18sp"
               android:singleLine="true"
               android:layout_gravity="center"
               android:textColor="@color/text_color"
               android:textColorHint="@color/text_color"
               android:background="@null"
               android:hint="Enter your name"/>
       </LinearLayout>

    </com.thelumiereguy.neumorphicview.views.NeumorphicCardView>

    <com.thelumiereguy.neumorphicview.views.NeumorphicCardView
        android:layout_gravity="center"
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="8dp"
        app:cardRadius="50"
        app:enableHighlight="true"
        app:enableShadow="true"
        app:enable_preview="true"
        app:highlightColor="@color/button_highlight_color"
        app:highlightDx="-4dp"
        app:highlightDy="-4dp"
        app:highlightRadius="16dp"
        app:horizontalPadding="16dp"
        app:neu_backgroundColor="@color/orange"
        app:shadowColor="@color/button_shadow_color"
        app:shadowDx="4dp"
        app:shadowDy="4dp"
        app:shadowRadius="16dp"
        app:verticalPadding="12dp">

        <TextView
            android:layout_margin="26dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="72dp"
            android:text="UPDATE"
            android:textColor="@color/text_color_alt"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.thelumiereguy.neumorphicview.views.NeumorphicCardView>

    <TextView
        android:id="@+id/tv_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="@string/code_butchers"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:clipChildren="false"
    tools:context=".activities.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/login"
        android:textColor="@color/text_color"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.thelumiereguy.neumorphicview.views.NeumorphicCardView
        android:id="@+id/neumorphicFrameLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="32dp"
        app:cardRadius="50"
        app:enableHighlight="true"
        app:enableShadow="true"
        app:enable_preview="true"
        app:highlightColor="@color/button_highlight_color"
        app:highlightDx="-4dp"
        app:highlightDy="-4dp"
        app:highlightRadius="16dp"
        app:horizontalPadding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:neu_backgroundColor="@color/button_background"
        app:shadowColor="@color/button_shadow_color"
        app:shadowDx="4dp"
        app:shadowDy="4dp"
        app:shadowRadius="16dp"
        app:verticalPadding="8dp">

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:background="@null"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:textSize="20sp" />
    </com.thelumiereguy.neumorphicview.views.NeumorphicCardView>

    <com.thelumiereguy.neumorphicview.views.NeumorphicCardView
        android:id="@+id/reEnterPasswordContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="24dp"
        app:cardRadius="50"
        app:enableHighlight="true"
        app:enableShadow="true"
        app:enable_preview="true"
        app:highlightColor="@color/button_highlight_color"
        app:highlightDx="-4dp"
        app:highlightDy="-4dp"
        app:highlightRadius="16dp"
        app:horizontalPadding="16dp"
        app:neu_backgroundColor="@color/button_background"
        app:shadowColor="@color/button_shadow_color"
        app:shadowDx="4dp"
        app:shadowDy="4dp"
        app:shadowRadius="16dp"
        app:verticalPadding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/neumorphicFrameLayout2"
        app:layout_constraintStart_toStartOf="@+id/neumorphicFrameLayout2"
        app:layout_constraintTop_toBottomOf="@+id/neumorphicFrameLayout2">

        <EditText
            android:id="@+id/txtRegReEnterPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:textSize="20sp"
            android:padding="8dp"
            android:textColor="@color/text_color"
            android:textColorHint="@color/text_color"
            android:background="@null"
            android:hint="@string/password"
            android:inputType="textPassword" />
    </com.thelumiereguy.neumorphicview.views.NeumorphicCardView>

    <com.thelumiereguy.neumorphicview.views.NeumorphicCardView
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="40dp"
        app:cardRadius="50"
        app:enableHighlight="true"
        app:enableShadow="true"
        app:enable_preview="true"
        app:highlightColor="@color/button_highlight_color"
        app:highlightDx="-4dp"
        app:highlightDy="-4dp"
        app:highlightRadius="16dp"
        app:horizontalPadding="16dp"
        app:neu_backgroundColor="@color/orange"
        app:shadowColor="@color/button_shadow_color"
        app:shadowDx="4dp"
        app:shadowDy="4dp"
        app:shadowRadius="16dp"
        app:verticalPadding="12dp"
        app:layout_constraintEnd_toEndOf="@+id/reEnterPasswordContainer"
        app:layout_constraintStart_toStartOf="@+id/reEnterPasswordContainer"
        app:layout_constraintTop_toBottomOf="@+id/reEnterPasswordContainer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="72dp"
            android:text="@string/sign_in"
            android:textColor="@color/text_color_alt"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.thelumiereguy.neumorphicview.views.NeumorphicCardView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:text="@string/or"
        android:layout_marginVertical="16dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSignIn"
        app:layout_constraintStart_toStartOf="@+id/btnSignIn"
        app:layout_constraintTop_toBottomOf="@+id/btnSignIn" />

    <com.thelumiereguy.neumorphicview.views.NeumorphicCardView
        android:id="@+id/btnSignInWithGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        app:cardRadius="50"
        app:enableHighlight="true"
        app:enableShadow="true"
        app:enable_preview="true"
        app:highlightColor="@color/button_highlight_color"
        app:highlightDx="-4dp"
        app:highlightDy="-4dp"
        app:highlightRadius="16dp"
        app:horizontalPadding="16dp"
        app:neu_backgroundColor="@color/orange"
        app:shadowColor="@color/button_shadow_color"
        app:shadowDx="4dp"
        app:shadowDy="4dp"
        app:shadowRadius="16dp"
        app:verticalPadding="12dp"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:text="@string/sign_in_with_google"
            android:textColor="@color/text_color_alt"
            android:drawablePadding="7dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            app:drawableLeftCompat="@drawable/ic_google" />
    </com.thelumiereguy.neumorphicview.views.NeumorphicCardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignInWithGoogle">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:text="@string/not_registered_an_account_yet" />

        <TextView
            android:id="@+id/btnCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:layout_marginStart="8dp"
            android:text="@string/create_new_account" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/code_butchers"
        android:textColor="@color/text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

</androidx.constraintlayout.widget.ConstraintLayout>
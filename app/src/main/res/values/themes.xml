<resources>
    <!-- Base application theme. -->
    <style name="Theme.YourCinemaCritics" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">#63FF85</item>

        <item name="colorAccent">@color/orange</item>

        <!-- Status bar color. -->

        <!-- Customize your theme here. -->
    </style>

    <style name="SearchViewCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--        searchView color-->
        <item name="android:textColor">@color/text_color</item>
        <item name="android:editTextColor">@color/text_color</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:tint">@color/icon_inactive</item>
    </style>

    <style name="SwitchCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/orange</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>
</resources>